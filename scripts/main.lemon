			{
				u8 alpha = (time < 20) ? (time * 255 / 20) : ((65 - time) * 255 / 45)
				Renderer.drawCustomSprite("title_screen_air_h", px, py, 0x00, SPRITE_FLAG_PRIO, 0x9f7f, 0, alpha)
