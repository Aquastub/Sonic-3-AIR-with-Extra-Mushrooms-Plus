		py = objA0.position.y.u16 - 48
		Renderer.drawCustomSprite("andknuckles", px, py, 0x00, SPRITE_FLAG_PRIO, 0x9f7e)
	}
	if (TS_BRANDING == 1 || (Mods.isModActive("Deez Nut Title Screen") || Mods.isModActive("Sonic 3: D.A. Garden Edition") || EM_MODDED_GFX == 1))
	{
		px = getScreenWidth() / 2
		py = objA0.position.y.u16 - 53
